# Codenet Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=codenet
MONGODB_URI=mongodb://admin:password123@localhost:27017/codenet?authSource=admin

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_CLERK_SECRET_KEY
CLERK_JWT_ISSUER=https://YOUR_CLERK_DOMAIN/.well-known/jwks.json
CLERK_WEBHOOK_SECRET=whsec_YOUR_CLERK_WEBHOOK_SECRET

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB
UPLOAD_DIR=./uploads

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=./logs/codenet.log

# Performance Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
CACHE_TTL=3600

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# External Services
BACKEND_URL=http://localhost:8080
WEBHOOK_URL=http://localhost:9090
